<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/spiceos_settings_title" >

    <Preference
        android:key="top_banner"
        android:id="@+id/spiceos_vibes"
        android:layout="@layout/spiceos_vibes"/>

        <!-- Status Bar -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="statusbar_category"
            android:layout="@layout/card_view_pref_top"
            android:title="@string/statusbar_title"
            android:fragment="com.spiceos.settings.fragments.StatusbarSettings"
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Quick Settings panel -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="quicksettings_category"
            android:layout="@layout/card_view_pref_middle"
            android:title="@string/quicksettings_title"
            android:fragment="com.spiceos.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Buttons -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="buttonsettings_category"
            android:layout="@layout/card_view_pref_bottom"
            android:title="@string/button_title"
            android:fragment="com.spiceos.settings.fragments.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"/>

        <!-- Navigation Bar -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="navigationbar_category"
            android:layout="@layout/card_view_pref_top"
            android:title="@string/navbar_title"
            android:fragment="com.spiceos.settings.fragments.NavbarSettings"
            android:icon="@drawable/ic_settings_navbar"/>

        <!-- Lock Screen -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="lockscreen_category"
            android:layout="@layout/card_view_pref_middle"
            android:title="@string/lockscreen_title"
            android:fragment="com.spiceos.settings.fragments.LockscreenSettings"
            android:icon="@drawable/ic_settings_lockscreen"/>

        <!-- Power Menu -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="powermenu__category"
            android:layout="@layout/card_view_pref_bottom"
            android:title="@string/powermenu_title"
            android:fragment="com.spiceos.settings.fragments.PowermenuSettings"
            android:icon="@drawable/ic_settings_powermenu"/>

        <!-- Gestures -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="gestures_category"
            android:layout="@layout/card_view_pref_top"
            android:title="@string/gestures_title"
            android:fragment="com.spiceos.settings.fragments.GestureSettings"
            android:icon="@drawable/ic_settings_gestures"/>

        <!-- Notifications -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="notifications_category"
            android:layout="@layout/card_view_pref_middle"
            android:title="@string/notifications_title"
            android:fragment="com.spiceos.settings.fragments.NotificationSettings"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- Misc -->
        <com.spiceos.settings.preferences.CardviewPreference
            android:key="misc_category"
            android:layout="@layout/card_view_pref_bottom"
            android:title="@string/misc_title"
            android:fragment="com.spiceos.settings.fragments.MiscSettings"
            android:icon="@drawable/ic_settings_misc"/>

    <!-- About Devs -->
        <Preference
            android:key="dev_info"
            android:title="@string/spiceos_about_info"
            android:summary="@string/spiceos_about_info_summary_title"
            android:fragment="com.android.settings.custom.SpiceOSDevsInfoFragment"
            android:icon="@drawable/ic_spiceos_about"/>

        <Preference android:layout="@layout/divider" />

</PreferenceScreen>
